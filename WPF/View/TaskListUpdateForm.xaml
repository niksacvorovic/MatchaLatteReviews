<Window x:Class="MatchaLatteReviews.WPF.View.TaskListUpdateForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchaLatteReviews.WPF.View"
        mc:Ignorable="d"
        Title="TaskListUpdateForm" Height="400" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Right" VerticalAlignment="Center">Title:</Label>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" 
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" >Genre:</Label>
        <ComboBox Grid.Column="1" Grid.Row="1" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" 
                  ItemsSource="{Binding Genres}" SelectedItem="{Binding SelectedGenre}"></ComboBox>
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="30" 
                Command="{Binding AddGenreCommand}">Add Genre</Button>
        <ListBox Grid.Column="1" Grid.Row="3" 
                 ItemsSource="{Binding SelectedGenres}"></ListBox>
        <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="center">Genres:</Label>
        <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center">Artist:</Label>
        <CheckBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" 
                  IsChecked="{Binding IsArtist, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
        <Label Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center">Author:</Label>
        <ComboBox Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200"
                  ItemsSource="{Binding AvailableAuthors}" SelectedItem="{Binding SelectedAuthorUsername}"></ComboBox>
        <Button Grid.Column="1" Grid.Row="6" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" 
                Command="{Binding AddToTaskListCommand}">Add to task list</Button>
    </Grid>
</Window>
