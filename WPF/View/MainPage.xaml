<Window x:Class="MatchaLatteReviews.WPF.View.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        d:DesignHeight="900" d:DesignWidth="1500"
        Icon="/WPF/img/logo.ico"
        Title="MainPage">

    <Window.Resources>
        <!-- ===== Buttons ===== -->
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F2632"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#2F3947"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#273142"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Helpers -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- ===== Card ===== -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#0F141B"/>
            <Setter Property="BorderBrush" Value="#283140"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Section header  ===== -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#EAECEF"/>
            <Setter Property="Margin" Value="0,28,0,12"/>
        </Style>

        <!-- Brushes -->
        <SolidColorBrush x:Key="SbTrackBrush" Color="#0B0E14"/>
        <SolidColorBrush x:Key="SbThumbBrush" Color="#1A2330"/>
        <SolidColorBrush x:Key="SbThumbHover" Color="#243044"/>
        <SolidColorBrush x:Key="SbTransparent" Color="#000000" Opacity="0"/>

        <!-- Thumb -->
        <Style x:Key="SlimThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource SbThumbBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SbThumbHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Vertical template -->
        <ControlTemplate x:Key="VerticalScrollBarTemplate" TargetType="ScrollBar">
            <Grid Background="{TemplateBinding Background}" Width="8">
                <Track x:Name="PART_Track"
               Orientation="Vertical"
               Minimum="{TemplateBinding Minimum}"
               Maximum="{TemplateBinding Maximum}"
               Value="{TemplateBinding Value}"
               ViewportSize="{TemplateBinding ViewportSize}"
               IsDirectionReversed="True">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.LineUpCommand"
                              Style="{x:Null}"
                              Background="{StaticResource SbTransparent}"
                              IsTabStop="False"/>
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SlimThumb}"/>
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.LineDownCommand"
                              Style="{x:Null}"
                              Background="{StaticResource SbTransparent}"
                              IsTabStop="False"/>
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <!-- Horizontal template  -->
        <ControlTemplate x:Key="HorizontalScrollBarTemplate" TargetType="ScrollBar">
            <Grid Background="{TemplateBinding Background}" Height="8">
                <Track x:Name="PART_Track"
               Orientation="Horizontal"
               Minimum="{TemplateBinding Minimum}"
               Maximum="{TemplateBinding Maximum}"
               Value="{TemplateBinding Value}"
               ViewportSize="{TemplateBinding ViewportSize}">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.LineLeftCommand"
                              Style="{x:Null}"
                              Background="{StaticResource SbTransparent}"
                              IsTabStop="False"/>
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SlimThumb}"/>
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.LineRightCommand"
                              Style="{x:Null}"
                              Background="{StaticResource SbTransparent}"
                              IsTabStop="False"/>
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>



        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="{StaticResource SbTrackBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SbTrackBrush}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template" Value="{StaticResource VerticalScrollBarTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Template" Value="{StaticResource HorizontalScrollBarTemplate}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- ===== DataTemplates ===== -->

        <!-- Editors' Pick -->
        <DataTemplate x:Key="EditorsPickTemplate">
            <Border Style="{StaticResource CardBorder}">
                <Grid Width="260">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Image Source="{Binding Cover}" Stretch="UniformToFill" ClipToBounds="True" Height="220"/>
                        <Border Background="#66000000" VerticalAlignment="Top" HorizontalAlignment="Left"
                                CornerRadius="8" Margin="8">
                            <TextBlock Text="{Binding Type}" Foreground="White" FontSize="12" Padding="6,2"/>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="1" Margin="6,10,6,8">
                        <TextBlock Text="{Binding Title}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="{Binding Type}" Foreground="#B7BCC7" FontSize="12"/>
                            <TextBlock Text="  ·  " Foreground="#B7BCC7" FontSize="12"/>
                            <TextBlock Text="★" Foreground="#FFD85E"/>
                            <TextBlock Text="{Binding Rating}" Foreground="#FFD85E" Margin="4,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Release (Album / EP / Single / Song)  -->
        <DataTemplate x:Key="ReleaseTemplate">
            <Border Style="{StaticResource CardBorder}">
                <StackPanel Width="200">
                    <Image Height="200" Source="{Binding Cover}" Stretch="UniformToFill"/>
                    <TextBlock Text="{Binding Title}" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,2"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Kind}" Foreground="#B7BCC7" FontSize="12"/>
                        <TextBlock Text="  ·  " Foreground="#B7BCC7" FontSize="12"/>
                        <TextBlock Text="★" Foreground="#FFD85E"/>
                        <TextBlock Text="{Binding AvgRating}" Foreground="#FFD85E" Margin="4,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Artist  -->
        <DataTemplate x:Key="ArtistTemplate">
            <Border Style="{StaticResource CardBorder}">
                <StackPanel Width="200">
                    <Image Height="200" Source="{Binding Photo}" Stretch="UniformToFill"/>
                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,2"/>
                    <TextBlock Text="Artist" Foreground="#B7BCC7" FontSize="12"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Event  -->
        <DataTemplate x:Key="EventTemplate">
            <Border Style="{StaticResource CardBorder}" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy}" Foreground="#B7BCC7"/>
                            <TextBlock Text=" • " Foreground="#B7BCC7"/>
                            <TextBlock Text="{Binding Location}" Foreground="#B7BCC7"/>
                        </StackPanel>
                        <TextBlock Text="{Binding ParticipantsShort}" Foreground="#D6D9E0" FontSize="12"/>
                        <TextBlock Text="Live recording" Foreground="#7FD4FF" FontSize="11"
                                   Visibility="{Binding HasRecording, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal">
                        <Button Content="▶" IsEnabled="{Binding CanStream}" Width="36" Margin="0,0,8,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- ===== Layout ===== -->
    <Grid Background="#0B0E14">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#0E1117" Grid.Row="0" CornerRadius="0" Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.35" ShadowDepth="4" BlurRadius="12"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="577*"/>
                    <ColumnDefinition Width="Auto" MinWidth="348"/>
                    <ColumnDefinition Width="450*"/>
                    <ColumnDefinition Width="125*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"
                            VerticalAlignment="Center" Height="50" Width="346">
                    <Image Source="/WPF/img/logo.png" Width="50" Height="50" Stretch="Uniform" Margin="0,0,10,0"/>
                    <TextBlock Text="Matcha Latte Reviews" FontSize="28" FontWeight="Bold"
                               Foreground="#F3F4F6" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Center" Margin="0,0,30,0" Height="55" Width="310" Grid.ColumnSpan="2">
                    <Button Style="{StaticResource HoverButtonStyle}" Content="Login" Height="40"
                            VerticalAlignment="Center" Click="Login_Click"/>
                    <Button Style="{StaticResource HoverButtonStyle}" Content="Sign up" Height="40"
                            VerticalAlignment="Center" Margin="10,0,0,0" Click="Register_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Editors' pick -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Editor's choice"/>
                <ItemsControl ItemsSource="{Binding EditorsPicks}" ItemTemplate="{StaticResource EditorsPickTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Releases -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="New releases"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Disabled"
              PanningMode="HorizontalOnly"
              PreviewMouseWheel="ChildScroll_PreviewMouseWheel">
                    <ItemsControl ItemsSource="{Binding NewReleases}" ItemTemplate="{StaticResource ReleaseTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>


                <!-- Artists -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Top artists"/>
                <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding FeaturedArtists}" ItemTemplate="{StaticResource ArtistTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Events -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Performances"/>
                <ItemsControl ItemsSource="{Binding Events}" ItemTemplate="{StaticResource EventTemplate}"/>

                <TextBlock Margin="0,24,0,48" Foreground="#9AA1AC" FontSize="12"
                           Text="*Klik na karticu otvara detalje (u prototipu za nekoliko primera)."/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
