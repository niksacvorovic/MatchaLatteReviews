<Window x:Class="MatchaLatteReviews.WPF.View.ArticleReviewsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchaLatteReviews.WPF.View"
        mc:Ignorable="d"
        Title="ArticleReviewsPage" Height="450" Width="800"
        Background="#0B0E14" Icon="/WPF/img/logo.ico">
    <Window.Resources>
        <!-- Tamna kartica -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#0F141B"/>
            <Setter Property="BorderBrush" Value="#283140"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#EAECEF"/>
            <Setter Property="Margin" Value="0,12,0,6"/>
        </Style>

        <!-- Jedna recenzija -->
        <DataTemplate x:Key="ReviewItemTemplate">
            <Border Style="{StaticResource CardBorder}" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="52"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar -->
                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20"
                            Background="#1F2632" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <TextBlock Text="{Binding Initials}" Foreground="White"
                                   FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding AuthorName}" Foreground="#EAECEF" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="   "/>
                            <TextBlock Text="{Binding StarsFilled}" Foreground="#FFD85E" FontSize="14"/>
                            <TextBlock Text="{Binding StarsEmpty}"  Foreground="#3F4756" FontSize="14"/>
                            <TextBlock Text="  "/>
                            <TextBlock Text="{Binding RatingOutOf5}" Foreground="#9AA1AC" FontSize="12"/>
                        </StackPanel>

                        <TextBlock Text="{Binding Comment}" TextWrapping="Wrap" Margin="0,6,0,0"
                                   Foreground="#D6D9E0" Visibility="{Binding CommentVisibility}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding PublicBadge}"   Foreground="#7FD4FF" FontSize="11"
                                       Visibility="{Binding PublicBadgeVisibility}"/>
                            <!--<TextBlock Text="{Binding ApprovedBadge}" Foreground="#92E6A7" FontSize="11" Margin="12,0,0,0"
                                       Visibility="{Binding ApprovedBadgeVisibility}"/>-->
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- Layout -->
    <Grid Margin="18" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- add form -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER: avg rating, number, add button -->
        <Border Style="{StaticResource CardBorder}" Grid.Row="0" Padding="16" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Average -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0" VerticalAlignment="Center">
                    <TextBlock Text="Average rating" Foreground="#9AA1AC" FontSize="12"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding AverageRatingDisplay}" Foreground="White" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="   "/>
                        <TextBlock Text="{Binding AverageStarsFilled}" Foreground="#FFD85E" FontSize="20"/>
                        <TextBlock Text="{Binding AverageStarsEmpty}"  Foreground="#3F4756" FontSize="20"/>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="1" Height="40" Width="1" Background="#283140"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Count + Write button -->
                <StackPanel Grid.Column="2" Margin="20,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="Total reviews" Foreground="#9AA1AC" FontSize="12"/>
                        <TextBlock Text="{Binding ReviewsCount}" Foreground="White" FontSize="28" FontWeight="Bold"/>
                    </StackPanel>
                    <Button Content="Write a review" Width="160" Height="36"
                            Visibility="{Binding WriteButtonVisibility}"
                            Click="WriteReview_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ADD FORM -->
        <Border Style="{StaticResource CardBorder}" Grid.Row="1" Padding="16" Margin="0,0,0,10"
                Visibility="{Binding AddFormVisibility}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Your review" FontSize="20" FontWeight="Bold" Foreground="#EAECEF" Margin="0,0,0,8"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Rating:" VerticalAlignment="Center" Foreground="#EAECEF" Width="70"/>
                    <Slider Minimum="1" Maximum="5" TickFrequency="1" IsSnapToTickEnabled="True"
                            Width="260" Value="{Binding NewRating}"/>
                    <TextBlock Text="{Binding NewRatingOutOf5}" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="#9AA1AC"/>
                    <CheckBox Content="Public"   IsChecked="{Binding NewIsPublic}"  Margin="16,0,0,0" Foreground="#EAECEF"/>
                    <!--<CheckBox Content="Approved" IsChecked="{Binding NewIsApproved}" Margin="12,0,0,0" Foreground="#EAECEF"/>-->
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <TextBlock Text="Comment (optional)" Foreground="#EAECEF"/>
                    <TextBox Height="120" AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Text="{Binding NewComment}" Foreground="#EAECEF" Background="#121722"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBlock Text="{Binding NewError}" Foreground="#FF6B6B" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <Button Content="Cancel" Width="110" Height="34" Margin="0,0,8,0"
                            Click="CancelAdd_Click"/>
                    <Button Content="Save" Width="110" Height="34" Click="SaveAdd_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- LISTA -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Reviews}" ItemTemplate="{StaticResource ReviewItemTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
