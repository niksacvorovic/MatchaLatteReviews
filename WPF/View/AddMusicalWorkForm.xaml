<Window x:Class="MatchaLatteReviews.WPF.View.AddMusicalWorkForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Musical Work" Height="500" Width="600">

    <Grid Margin="0,0,0,-78">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <!--Header-->
        <Label Content="Add Musical Work Form" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Grid.Row="0"/>
        <!-- form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Title:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0"/>
            <TextBox Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1"/>

            <Label Content="Content:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="1"/>
            <TextBox Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1"/>

            <Label Content="Rating:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="2"/>
            <ComboBox Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>

            <Label Content="Release Date:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="3"/>
            <DatePicker Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3"/>

            <Label Content="Type:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="4"/>
            <ComboBox Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="4">
                <ComboBoxItem Content="EP"/>
                <ComboBoxItem Content="Single"/>
                <ComboBoxItem Content="Album"/>
                <ComboBoxItem Content="Performance"/>
                <ComboBoxItem Content="Song"/>
            </ComboBox>

            <Label Content="Length:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="5"/>
            <TextBox Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="5"/>

            <Label Content="Mozda fali nesto za verzije:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="6"/>

        </Grid>

        <!--Save Button-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Save" Click="SaveButton_Click" Width="140" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.Column="0"/>
            <Button Content="Back" Click="BackButton_Click" Width="140" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.Column="1"/>
        </Grid>

    </Grid>
</Window>
