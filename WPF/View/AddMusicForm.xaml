<Window x:Class="MatchaLatteReviews.WPF.View.AddMusicForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Musical Work" Height="500" Width="600">

    <Grid Margin="0,0,0,-78">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <!--Header-->
        <Label Content="Add Musical Work Form" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Grid.Row="0"/>
        <!-- form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Title:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0"/>
            <TextBox Text="{Binding Title, Mode=TwoWay}" Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1"/>

            <Label Content="Content:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="1"/>
            <TextBox Text="{Binding Content, Mode=TwoWay}" Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1"/>

            <Label Content="Rating:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="2"/>
            <ComboBox ItemsSource="{Binding Ratings}" SelectedItem="{Binding Rating, Mode=TwoWay}" Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2">
            </ComboBox>

            <Label Content="Release Date:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="3"/>
            <DatePicker SelectedDate="{Binding ReleaseDate, Mode=TwoWay}" Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3"/>

            <Label Content="Type:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="4"/>
            <ComboBox ItemsSource="{Binding Types}" SelectedItem="{Binding Type, Mode=TwoWay}"  Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="4">
                
            </ComboBox>

            <Label Content="Length:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="5"/>
            <TextBox Text="{Binding Length, Mode=TwoWay}" Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="5"/>

            <Label Content="Mozda fali nesto za verzije:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="6"/>

        </Grid>

        <!--Save Button-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Save" Command="{Binding AddMusicCommand}" Width="140" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.Column="0"/>
            <Button Content="Back" Command="{Binding BackCommand}" Width="140" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.Column="1"/>
        </Grid>

    </Grid>
</Window>
