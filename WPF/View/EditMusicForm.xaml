<Window x:Class="MatchaLatteReviews.WPF.View.EditMusicForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchaLatteReviews.WPF.View"
        mc:Ignorable="d"
        Title="EditMusicForm" Height="500" Width="800">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>

        <!-- ARTICLE META -->
        <GroupBox Header="Music Info" Grid.Row="0" Grid.ColumnSpan="2" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Name:</Label>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="4"
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>

                <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="Image:"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="4"
                         Text="{Binding Image, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="Release Date:"/>
                <DatePicker Grid.Row="2" Grid.Column="1" Margin="4"
                            SelectedDate="{Binding ReleaseDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Content="Length:"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="4"
                         Text="{Binding LengthString, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Content="Type:"/>
                <ComboBox Grid.Row="2" Grid.Column="3" Margin="4"
                          ItemsSource="{Binding AvailableTypes}"
                          SelectedItem="{Binding SelectedType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Content="Rating:"/>
                <Grid Grid.Column="3" Grid.Row="0" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Slider Grid.Row="0"
                        Minimum="1" Maximum="5"
                        Value="{Binding SelectedRating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center" Margin="4"/>
                    <TextBlock Grid.Row="1"
                           Text="{Binding SelectedRating, StringFormat='Rating: {0}'}"
                           HorizontalAlignment="Center" FontWeight="Bold" Margin="4"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- CONTENT -->
        <GroupBox Header="Content" Grid.Row="1" Grid.ColumnSpan="2" Padding="10" Margin="0,0,0,10">
            <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Auto" MinHeight="80" TextWrapping="Wrap"
                     MaxHeight="80"
                     Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"/>
        </GroupBox>

        <!-- COUNTRIES and GENRES -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <GroupBox Header="Genres" Grid.Column="0" IsEnabled="False">
                <Border Margin="8" BorderBrush="#555" BorderThickness="1" CornerRadius="4" Padding="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Genres}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Genre.Name}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </GroupBox>
        </Grid>

        <Button Grid.Row="3" Grid.ColumnSpan="2" Height="32"
                Command="{Binding SaveMusicCommand}">
            Save music
        </Button>
    </Grid>
</Window>
