<Window x:Class="MatchaLatteReviews.WPF.View.ManageArtistsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchaLatteReviews.WPF.View"
        mc:Ignorable="d"
        Title="ManageArtistsPage" Height="450" Width="800"
        Background="#0B0E14" Icon="/WPF/img/logo.ico">
    <Window.Resources>
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F2632"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#2F3947"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#273142"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#0F141B"/>
            <Setter Property="BorderBrush" Value="#283140"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#EAECEF"/>
            <Setter Property="Margin" Value="0,28,0,12"/>
        </Style>

        <!-- ScrollBar -->
        <SolidColorBrush x:Key="SbTrackBrush" Color="#0B0E14"/>
        <SolidColorBrush x:Key="SbThumbBrush" Color="#1A2330"/>
        <SolidColorBrush x:Key="SbThumbHover" Color="#243044"/>
        <SolidColorBrush x:Key="SbTransparent" Color="#000000" Opacity="0"/>

        <Style x:Key="SlimThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource SbThumbBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SbThumbHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBarTemplate" TargetType="ScrollBar">
            <Grid Background="{TemplateBinding Background}" Width="8">
                <Track x:Name="PART_Track" Orientation="Vertical"
                       Minimum="{TemplateBinding Minimum}"
                       Maximum="{TemplateBinding Maximum}"
                       Value="{TemplateBinding Value}"
                       ViewportSize="{TemplateBinding ViewportSize}"
                       IsDirectionReversed="True">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.LineUpCommand" Style="{x:Null}"
                                      Background="{StaticResource SbTransparent}" IsTabStop="False"/>
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SlimThumb}"/>
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.LineDownCommand" Style="{x:Null}"
                                      Background="{StaticResource SbTransparent}" IsTabStop="False"/>
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="{StaticResource SbTrackBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SbTrackBrush}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template" Value="{StaticResource VerticalScrollBarTemplate}"/>
        </Style>

        <!-- Artist card -->
        <DataTemplate x:Key="ArtistCrudCardTemplate">
            <Border Style="{StaticResource CardBorder}">
                <Grid Width="220">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Update/Delete buttons -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Name}" Foreground="White"
                                   FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>

                        <Button Grid.Column="1" Width="34" Height="30" Margin="6,0,0,0"
                                ToolTip="Edit"
                                Command="{Binding DataContext.EditArtistCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}">
                            <TextBlock Text="✎" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>

                        <Button Grid.Column="2" Width="34" Height="30" Margin="6,0,0,0"
                                ToolTip="Delete"
                                Command="{Binding DataContext.DeleteArtistCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}">
                            <TextBlock Text="✖" Foreground="#FF6B6B" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>

                    <!-- Image -->
                    <Image Grid.Row="1" Height="200" Margin="0,8,0,8"
                           Source="{Binding Photo}" Stretch="UniformToFill"/>

                    <!-- Artist data -->
                    <StackPanel Grid.Row="2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="★" Foreground="#FFD85E"/>
                            <TextBlock Text="{Binding Rating}" Foreground="#FFD85E" Margin="4,0,0,0"/>
                            <TextBlock Text="  ·  " Foreground="#B7BCC7" FontSize="12"/>
                            <TextBlock Text="{Binding Debut, StringFormat=Debut: {0}}" Foreground="#B7BCC7" FontSize="12"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Blurb}" Foreground="#B7BCC7" FontSize="12" TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <DockPanel Grid.Row="0" Margin="20,16,20,0">
            <TextBlock Text="Artists" Style="{StaticResource SectionHeader}" DockPanel.Dock="Left" Margin="0,0,16,0"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <!--<Button Style="{StaticResource HoverButtonStyle}" Content="Add artist"
                        Command="{Binding AddNewArtistCommand}"/>-->
                <Button Style="{StaticResource HoverButtonStyle}" Content="Refresh" Margin="10,0,0,0"
                        Command="{Binding RefreshCommand}"/>
            </StackPanel>
        </DockPanel>

        <!-- Grid of cards -->
        <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Artists}" ItemTemplate="{StaticResource ArtistCrudCardTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
