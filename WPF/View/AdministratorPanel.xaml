<Window x:Class="MatchaLatteReviews.WPF.View.AdministratorPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignHeight="900" d:DesignWidth="1500"
        Title="Admin Panel"
        Icon="/WPF/img/logo.ico"
        Background="White">

    <Window.Resources>
        <!-- Reuse hover button style -->
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Input box style -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="PasswordBox" BasedOn="{StaticResource {x:Type TextBox}}"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" Grid.Row="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="4" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,0,0">
                    <Image Source="/WPF/img/logo.png" Width="50" Height="50" Margin="0,0,10,0"/>
                    <TextBlock Text="Admin Panel"
                               FontSize="28"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="Black"/>
                </StackPanel>

                <Grid Grid.Column="2" VerticalAlignment="Center" Margin="0,0,30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="0" Grid.Row="0" Style="{StaticResource HoverButtonStyle}" Content="Logout" Click="Logout_Click" Margin="0,0,10,5"/>
                    <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource HoverButtonStyle}" Content="Register editor" Click="RegisterEditor_Click" Margin="0,0,10,5"/>
                    <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource HoverButtonStyle}" Content="Add new genre" Click="AddNewGenre_Click" Margin="0,0,10,5"/>
                    <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource HoverButtonStyle}" Content="Add to Task List" Click="AddToTaskList_Click" Margin="0,0,10,0"/>
                    <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource HoverButtonStyle}" Content="Add new country" Click="AddNewCountry_Click" Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource HoverButtonStyle}" Content="Artists" Click="Artists_Click" Margin="0,0,10,0"/>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
