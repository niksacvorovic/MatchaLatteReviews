<Window x:Class="MatchaLatteReviews.WPF.View.ReviewArticlesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchaLatteReviews.WPF.View"
        mc:Ignorable="d"
        Title="ReviewArticlesForm" Height="400" Width="300">

    <Window.Resources>
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding ArticlesToReview}" SelectedItem="{Binding SelectedArticle}">

        </ListBox>
        <Button Grid.Row="1" Margin="0 10" Click="ViewArticles_Click" Style="{StaticResource HoverButtonStyle}">
            View Article
        </Button>
        <Button Grid.Row="2" Margin="0 10" Command="{Binding ApproveArticleCommand}" Style="{StaticResource HoverButtonStyle}">
            Approve Article
        </Button>
        <Button Grid.Row="3" Margin="0 10" Command="{Binding DeclineArticleCommand}" Style="{StaticResource HoverButtonStyle}">
            Decline Article
        </Button>
    </Grid>
</Window>
