<Window x:Class="MatchaLatteReviews.WPF.View.ArticlePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Details"
        Width="1100" Height="740"
        Background="#0B0E14"
        Icon="/WPF/img/logo.ico">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="#0F141B"/>
            <Setter Property="BorderBrush" Value="#283140"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAECEF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,8"/>
        </Style>

        <Style x:Key="RowText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D6DAE3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <!--  button -->
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1F2632"/>
            <Setter Property="BorderBrush" Value="#2F3947"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#273142"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!--  scrollbar  -->
        <SolidColorBrush x:Key="SbTrackBrush" Color="#0B0E14"/>
        <SolidColorBrush x:Key="SbThumbBrush" Color="#0B0E14"/>
        <SolidColorBrush x:Key="SbThumbHover" Color="#1A2330"/>

        <Style x:Key="SlimThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource SbThumbBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SbThumbHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBarTemplate" TargetType="ScrollBar">
            <Grid Background="{TemplateBinding Background}" Width="8" Opacity="0.6">
                <Track x:Name="PART_Track"
                       Orientation="Vertical"
                       Minimum="{TemplateBinding Minimum}"
                       Maximum="{TemplateBinding Maximum}"
                       Value="{TemplateBinding Value}"
                       ViewportSize="{TemplateBinding ViewportSize}"
                       IsDirectionReversed="True">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.LineUpCommand" Style="{x:Null}" Background="{StaticResource SbTrackBrush}" IsTabStop="False"/>
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SlimThumb}"/>
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.LineDownCommand" Style="{x:Null}" Background="{StaticResource SbTrackBrush}" IsTabStop="False"/>
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="{StaticResource SbTrackBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SbTrackBrush}"/>
            <Setter Property="Template" Value="{StaticResource VerticalScrollBarTemplate}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        

        <!-- HEADER -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding Title}"
                       Foreground="#FFFFFF"
                       FontSize="36"
                       FontWeight="Bold"/>

            <Separator Grid.Row="1" Margin="0,12,0,0" Background="#283140" Height="1"/>
        </Grid>

        <!-- BODY -->
        <Grid Grid.Row="1" Margin="0,18,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            
            <Grid Grid.Column="0" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
          
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource Card}" Height="420">
                    <Image Source="{Binding Cover}" Stretch="Uniform"/>
                </Border>

                <Button Grid.Row="2"
            Content="Reviews"
            Style="{StaticResource PillButton}"
            Width="200" Height="44"
            HorizontalAlignment="Center"
            Click="OpenReviews_Click"/>
            </Grid>
            


            <!--  info -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- ARTIST info -->
                    <StackPanel Visibility="{Binding IsArtist, Converter={StaticResource BoolToVis}}">

                        <!-- Profile header + star rating -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                            <TextBlock Style="{StaticResource SectionHeader}" Text="Profile" Margin="0,20,8,8"/>
                            <TextBlock Text="★" Foreground="#FFD85E" FontSize="18" VerticalAlignment="Center" Margin="6,14,0,0"/>
                            <TextBlock Text="{Binding Rating}" Foreground="#FFD85E" FontSize="16" VerticalAlignment="Center" Margin="4,14,0,0"/>
                        </StackPanel>

                        <!-- Debut & Country -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Debut" Foreground="#9FB0C5" FontWeight="SemiBold" Margin="0,2,0,6"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Debut}" Foreground="#EAECEF" Margin="0,2,0,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Country" Foreground="#9FB0C5" FontWeight="SemiBold" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CountryNamesJoined}" Foreground="#EAECEF" TextWrapping="Wrap"/>
                        </Grid>

                        <TextBlock Style="{StaticResource SectionHeader}" Text="Biography"/>
                        <TextBlock Text="{Binding Content}" Foreground="#D6DAE3" TextWrapping="Wrap" FontSize="15" />
                    </StackPanel>

                    <!-- MUSIC info -->
                    <StackPanel Visibility="{Binding IsMusic, Converter={StaticResource BoolToVis}}">
                        <TextBlock Style="{StaticResource SectionHeader}" Text="Release"/>

                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Type -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Type" Foreground="#9FB0C5"
                   FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="{Binding MusicType}" Foreground="#EAECEF"
                   FontSize="16"/>

                            <!-- Artist -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Artist" Foreground="#9FB0C5"
                   FontWeight="SemiBold" FontSize="16" Margin="0,6,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                   Text="{Binding MusicName}" Foreground="#EAECEF"
                   FontSize="16" Margin="0,6,0,0" TextWrapping="Wrap"/>

                            <!-- Length -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Length" Foreground="#9FB0C5"
                   FontWeight="SemiBold" FontSize="16" Margin="0,6,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                   Text="{Binding MusicLength, StringFormat={}{0} s}" Foreground="#EAECEF"
                   FontSize="16" Margin="0,6,0,0"/>

                            <!--  Genres -->
                            <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Genres" Foreground="#9FB0C5"
                           FontWeight="SemiBold" FontSize="16" Margin="0,6,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1"
                           Text="{Binding MusicGenresJoined}" Foreground="#EAECEF"
                           FontSize="16" Margin="0,6,0,0" TextWrapping="Wrap"/>
                        </Grid> 

                        <TextBlock Style="{StaticResource SectionHeader}" Text="About"/>
                        <TextBlock Text="{Binding Content}" Foreground="#D6DAE3"
               TextWrapping="Wrap" FontSize="16"/>
                    </StackPanel>


                    <!-- Releases -->
                    <StackPanel Visibility="{Binding IsArtist, Converter={StaticResource BoolToVis}}" Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SectionHeader}" Text="Releases"/>

                        <StackPanel>
                            <TextBlock Text="Albums" Foreground="#C6E2FF" FontSize="18" FontWeight="SemiBold" Margin="0,8,0,4"/>
                            <ItemsControl ItemsSource="{Binding Albums}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{StaticResource RowText}" Text="{Binding Title}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Margin="0,6,0,0">
                            <TextBlock Text="EPs" Foreground="#C6E2FF" FontSize="18" FontWeight="SemiBold" Margin="0,8,0,4"/>
                            <ItemsControl ItemsSource="{Binding EPs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{StaticResource RowText}" Text="{Binding Title}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Margin="0,6,0,0">
                            <TextBlock Text="Singles" Foreground="#C6E2FF" FontSize="18" FontWeight="SemiBold" Margin="0,8,0,4"/>
                            <ItemsControl ItemsSource="{Binding Singles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{StaticResource RowText}" Text="{Binding Title}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Margin="0,6,0,0">
                            <TextBlock Text="Songs" Foreground="#C6E2FF" FontSize="18" FontWeight="SemiBold" Margin="0,8,0,4"/>
                            <ItemsControl ItemsSource="{Binding Songs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{StaticResource RowText}" Text="{Binding Title}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Margin="0,6,0,0">
                            <TextBlock Text="Performances" Foreground="#C6E2FF" FontSize="18" FontWeight="SemiBold" Margin="0,8,0,4"/>
                            <ItemsControl ItemsSource="{Binding Performances}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{StaticResource RowText}" Text="{Binding Title}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
