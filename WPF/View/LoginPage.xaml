<Window x:Class="MatchaLatteReviews.WPF.View.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchaLatteReviews.WPF.View"
        mc:Ignorable="d"
        Icon ="/WPF/img/logo.ico"
        Title="LoginPage" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Content="Login" FontSize="30" FontWeight="Bold"
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10" />

        <!-- Form -->
        <Grid Grid.Row="1" Margin="10,20,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Column -->
            <Label Grid.Row="0" Grid.Column="0" Content="Username" FontWeight="DemiBold" FontSize="16" Margin="0,0,0,5" />
            <TextBox Text="{Binding Username,Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Height="30" Margin="0,36,0,10" VerticalContentAlignment="Center" Grid.RowSpan="2" />

            <Label Grid.Row="2" Grid.Column="0" Content="Password" FontWeight="DemiBold" FontSize="16" Margin="0,0,0,5" />
            <PasswordBox  PasswordChanged="OnPasswordChanged" Grid.Row="3" Grid.Column="1" Height="30" Margin="0,0,0,10" VerticalContentAlignment="Center" />
        </Grid>
        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,0,0,30" HorizontalAlignment="Center">
            <Button Content="Login" Command="{Binding LoginCommand}" Style="{StaticResource HoverButtonStyle}" Margin="0,10,0,5" Width="199"/>
            <TextBlock HorizontalAlignment="Center">
                <Run Text="Don't have an account?" />
                <Hyperlink Click="OnHyperlinkClicked" NavigateUri="LoginView.xaml" Foreground="#8ba888">Register in here</Hyperlink>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center">
                <Run Text=""/>
                <Hyperlink Click="OnMainPageClicked" NavigateUri="LoginView.xaml" Foreground="#8ba888">Main page</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>